@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var pageTitle = !string.IsNullOrEmpty(ViewBag?.Title) ? $"{ViewBag?.Title} | Onatrix - Financial Solution" : $"Onatrix - Financial Solution";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/scss/main.css?v=1.0">
    <link rel="stylesheet" href="/css/theme.css">
	<script src="/js/javascript.js" defer></script>
    <title>@pageTitle</title>
</head>
<body>
	<div class="wrapper"> 
		@await Html.PartialAsync("partials/static/header.cshtml")
		@if(!string.IsNullOrEmpty(ViewBag?.Title))
		@await Html.PartialAsync("partials/static/breadcrumb.cshtml")
		<main>
			@RenderBody()
		</main>
		@await Html.PartialAsync("partials/static/footer.cshtml")
	</div>

</body>
</html>