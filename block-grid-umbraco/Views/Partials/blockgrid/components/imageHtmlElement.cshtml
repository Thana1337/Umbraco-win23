@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var selectedImage = Model?.Content.Value<IPublishedContent>("selectedImage")?.Url() ?? null;
    var imageAlt = Model?.Content.Value<string>("imageAlt") ?? ""; 
    var className = Model?.Content.Value<string>("className") ?? ""; 
}

@if (!string.IsNullOrEmpty(selectedImage))
{
    <img src="@selectedImage" alt="@imageAlt" class="@className" />
}

